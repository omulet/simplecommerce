<section class="small-cart">
<h3 class="section-title"><strong>Cosul</strong> tau</h3>
<% if @cart.cart_items.size > 0 %>
  <% @cart.cart_items.each do |item| %>
    
    <div class="product clearfix">
      <div class="frame">
        <%= image_tag item.product.photo.url(:tiny) %>
      </div>
      <div class="description">
        <p class="qty"><%= item.quantity %> <span>* <%= item.product.price %> lei</span></p>
        <p class="title"><%= item.product.name %></p>
        <div class="controls">
          <%= link_to "[x]", remove_from_cart_url(:id => item.product.id), :class => "icon simple delete", :title => "Sterge" %>
        </div>
      </div>
    </div><!-- .product -->
    
  <% end %>
  
  <div class="cart-actions">
    <div class="cumpara">
      <%= link_to 'Cumpara', cart_path(@cart)%><span><%= @cart.subtotal %> lei</span>
    </div>
    <%= link_to 'Detalii cos', cart_path(@cart)%>
  </div><!-- .cart-actions -->
  
<% else %>
  Cosul tau este gol.
<% end %>
</section>