<section id="categories">
  <h3 class="section-title"><strong>Categorii</strong> de produse</h3>
  <nav>
    <ul>
      <!-- <li class="active"> -->
      <% @product_categories.each do |category| %>
        <% if !@category.nil? && @category == category %>
          <% active = "class='active'" %>
        <% else %>
          <% active = "" %>
        <% end %>
      	<li <%= active -%>><%= link_to category.description, category_products_url(category) , :category_id => category.id %></li>
      <% end%>
    </ul>
  </nav><!-- .categories navigation -->
</section><!-- .categories section -->